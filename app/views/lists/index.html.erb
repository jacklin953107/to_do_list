<table class="table table-striped table-condensed">
  <% @lists.each do |list| %>
    <tr>
      <td><%= link_to list.name, list_path(list) %></td>
      <% if list.finished == true %>
          <td>
            <%= link_to  check_list_path(list), method: :patch do %>
                <span class="glyphicon glyphicon-check"></span>
            <% end %>
          </td>
      <% else %>
          <td>
            <%= link_to  check_list_path(list), method: :patch do %>
                <span class="glyphicon glyphicon-unchecked"></span>
            <% end %>
          </td>
      <% end  %>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <% if list.due > Date.today %>
        <td><%= link_to 'Destroy', list_path(list), method: :delete, data:{ confirm: "Are you sure?" } %></td>
      <% else %>
        <td><%= link_to 'Outdated' %></td>
      <% end %>
    </tr>
  <% end %>
</table>

